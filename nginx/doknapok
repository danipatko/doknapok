server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/doknapok;

        modsecurity on;
        modsecurity_rules_file /etc/nginx/modsec/main.conf;

        index index.html;

        server_name doknapok;
        location / {
                try_files $uri $uri/ =404;
        }
}